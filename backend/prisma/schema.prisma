datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model users {
  id           Int     @id @default(autoincrement())
  name         String
  email        String  @unique
  passwordHash String
  
  posts posts[] @relation("poster")
}
model posts {
  id          String   @id @default(cuid())
  title       String
  content     String
  created_at  DateTime @default(now())
  user_id     Int

  user        users @relation("poster", fields: [user_id], references: [id])
}
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}
